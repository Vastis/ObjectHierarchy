<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="620.0" prefWidth="420.0" fx:controller="window.WindowController">
   <children>
      <HBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" prefWidth="100" text="Start" onAction="#onStartButtonClicked"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="pauseButton" mnemonicParsing="false" prefWidth="100" text="Pause" onAction="#onPauseButtonClicked" disable="true"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="stopButton" mnemonicParsing="false" prefWidth="100" text="Stop" onAction="#onStopButtonClicked" disable="true"/>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <TextArea fx:id="logTextArea" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="420.0"/>
      <Canvas fx:id="canvas" height="400.0" layoutX="10.0" layoutY="10.0" width="400.0" />
   </children>
</AnchorPane>
